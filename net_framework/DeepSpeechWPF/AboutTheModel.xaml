        <TextBlock Margin="0,52,0,0" TextWrapping="Wrap" Text="Model Version" VerticalAlignment="Top" HorizontalAlignment="Center" Width="180" TextAlignment="Right" Height="16"/>
        <TextBlock Margin="0,73,0,0" TextWrapping="Wrap" Text="Contact Info" VerticalAlignment="Top" HorizontalAlignment="Center" Width="180" TextAlignment="Right" Height="16"/>
        <TextBlock Margin="0,94,0,0" TextWrapping="Wrap" Text="License" VerticalAlignment="Top" HorizontalAlignment="Center" Width="180" TextAlignment="Right" Height="16"/>
        <TextBlock Margin="0,115,0,0" TextWrapping="Wrap" Text="Language" VerticalAlignment="Top" HorizontalAlignment="Center" Width="180" TextAlignment="Right" Height="16"/>
        <TextBlock Margin="0,136,0,0" TextWrapping="Wrap" Text="Runtime" VerticalAlignment="Top" HorizontalAlignment="Center" Width="180" TextAlignment="Right" Height="16"/>
