        <TextBlock Margin="0,178,0,0" TextWrapping="Wrap" Text="Maximum DeepSpeech version" VerticalAlignment="Top" HorizontalAlignment="Center" Width="180" TextAlignment="Right" Height="16"/>
        <TextBlock Margin="0,199,0,0" TextWrapping="Wrap" Text="Acoustic Model" VerticalAlignment="Top" HorizontalAlignment="Center" Width="180" TextAlignment="Right" Height="16"/>
        <TextBlock Margin="0,220,0,0" TextWrapping="Wrap" Text="Scorer" VerticalAlignment="Top" HorizontalAlignment="Center" Width="180" TextAlignment="Right" Height="16"/>
        
        <TextBlock x:Name="txtAuthor" Margin="10,10,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextAlignment="Left" Height="16" Grid.Column="1"/>
        <TextBlock x:Name="txtNameOfModel" Margin="10,31,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextAlignment="Left" Height="16" Grid.Column="1"/>
        <TextBlock x:Name="txtModelVersion" Margin="10,52,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextAlignment="Left" Height="16" Grid.Column="1"/>
        <TextBlock x:Name="txtContactInfo" Margin="10,73,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextAlignment="Left" Height="16" Grid.Column="1"/>
        <TextBlock x:Name="txtLicense" Margin="10,94,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextAlignment="Left" Height="16" Grid.Column="1"/>
        <TextBlock x:Name="txtLanguage" Margin="10,115,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextAlignment="Left" Height="16" Grid.Column="1"/>
        <TextBlock x:Name="txtRuntime" Margin="10,136,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextAlignment="Left" Height="16" Grid.Column="1"/>
        <TextBlock x:Name="txtMinimumVersion" Margin="10,157,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextAlignment="Left" Height="16" Grid.Column="1"/>
